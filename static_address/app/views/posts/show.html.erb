<div class="container">
	<div class="row">
		<div id="title-row-show" class="small-6 small-centered columns">
			<h1><%= @post.title %></h1>
			<h3><%= @post.artist %></h3>
			<h5><%= @post.genre %></h5>
		</div>
	</div>

	<div class="row">
		<div id="content-row-show" class="small-12 columns">
			<p><%= @post.content %></p>
		</div>
	</div>

	<div id="media-row" class="row">
		<div class="small-12 medium-6 columns">
			<h3>User Info</h3>
		</div>
		<div style="border-left:1px solid #000;height:200px" class="small-12 medium-6 columns">
			<div id="target"></div>
		</div>
	</div>

	<div id="youtube-row" class="row">
		<div class="small-12 medium-6 columns">
			<h3>User Info</h3>
		</div>
		<div style="border-left:1px solid #000;height:200px" class="small-12 medium-6 columns">
            <ol class="video">
                <div class="flex-video"><%= @post.soundfile %></div>
            </ol>
   		 </div>

   		<div class="flex-video">
        	<iframe width="420" height="315" src=<%= @post.soundfile %> frameborder="0" allowfullscreen></iframe>
		</div>
	</div>
</div>
<script type="application/javascript">
	var url = "<%= @post.soundfile %>";
</script>
