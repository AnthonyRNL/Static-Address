<div id="show-wrapper">
	<div class="row">
		<div id="title-row-show" class="small-6 small-centered columns">
			<h1><%= @post.title %></h1>
		</div>
	</div>

<div id="post-inner-wrapper">

	<div id="media-row" class="row">
		<div class="small-12 medium-6 columns">
			<h3 id="show-post-title">By: <%= @user.name %> </h3>
		</div>
		<div id="media-player-div" class="small-12 medium-6 columns">
			<div id="target"></div>
		</div>
	</div>

	<hr>

	<div class="row">
		<div class="small-6 small-centered columns">
			<h2>Body Title</h2>
		</div>
		
		<div class="small-12 columns">
			<section>
				<p><%= @post.content %></p>
			</section>
		</div>
	</div>
</div>
</div>

